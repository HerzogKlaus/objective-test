{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"lib": [
			"ESNext",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"target": "es5",
		"jsx": "preserve",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}